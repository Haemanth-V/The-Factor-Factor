<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#64FFDA"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        android:textColor="#E91E63"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textViewSpacing"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="#FFEB3B"
        android:onClick="sendMessage"
        android:text="@string/new_game"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewSpacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text=" "/>

    <Button
        android:id="@+id/buttonHighScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewSpacing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="#FFEB3B"
        android:clickable="true"
        android:textSize="18sp"
        android:onClick="longestStreak"
        android:text="Longest Winning Streak" />


</RelativeLayout>